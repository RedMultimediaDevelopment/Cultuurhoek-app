{
  "compilerOptions": {
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "rootDirs": ["./src", "../../packages/micro-kong"],
    "outDir": "./build",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "**/*.test.*/*", "jest.config.ts"]
}
