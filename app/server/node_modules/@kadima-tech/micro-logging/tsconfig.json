{
  "compilerOptions": {
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "rootDir": "./",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["index.ts", "src"],
  "exclude": ["node_modules", "**/*.test.*/*"]
}
